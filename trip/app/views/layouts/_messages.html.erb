<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>">
  	<a href="#" data-dismiss="alert" class="close">Ã—</a>
  	<ul>
	  <% if value.instance_of?(Array) %>
		  <% value.each do |msg| %>
		  <li>
		    <%= msg %>
		  </li>
		  <% end %>
		<% elsif %>
	  	<li>
		  	<%= value %>
		  </li>
	  <% end %>
		</ul>
  </div>
<% end %>